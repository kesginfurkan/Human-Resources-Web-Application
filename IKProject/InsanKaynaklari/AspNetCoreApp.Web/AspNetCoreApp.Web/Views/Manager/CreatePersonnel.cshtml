@model CoreLayer.Entities.Personnel

@{
    ViewData["Title"] = "Kullanıcı Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Argon Dashboard - Free Dashboard for Bootstrap 4</title>
    <!-- Favicon -->
    <link rel="icon" href="~/argon/assets/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/argon/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/argon/assets/vendor/@@fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/argon/assets/css/argon.css?v=1.2.0" type="text/css">
    <title>IK Application</title>
</head>
<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <h1>Ekle</h1>

                <h4>Personel</h4>
                <hr />
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <form asp-area="Admin" asp-controller="Admins" asp-action="Create" class="row g-3" enctype="multipart/form-data" method="post">
                        <div class="col-12">
                            <label asp-for="ImagePath" class="form-label">Fotoğraf</label>
                            <input asp-for="ImagePath" type="file" accept="image/*" class="form-control" id="ImagePath" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Name" class="form-label">@Html.DisplayNameFor(model => model.Name)</label>
                            <input asp-for="Name" type="text" class="form-control" id="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Surname" class="form-label">@Html.DisplayNameFor(model => model.Surname)</label>
                            <input asp-for="Surname" type="text" class="form-control" id="Surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                            <input asp-for="Email" type="email" class="form-control" id="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Department" class="form-label">@Html.DisplayNameFor(model => model.Department)</label>
                            <input asp-for="Department" type="text" class="form-control" id="Department">
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="PhoneNumber" class="form-label">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                            <input asp-for="PhoneNumber" type="tel" name="phone" pattern="[0-9]{4}[0-9]{3}[0-9]{4}" class="form-control" id="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="BirthDate" class="form-label">@Html.DisplayNameFor(model => model.BirthDate)</label>
                            <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Address" class="form-label">@Html.DisplayNameFor(model => model.Address)</label>
                            <input asp-for="Address" type="text" class="form-control" id="Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Ekle" class="btn btn-primary" />
                            <a asp-controller="Login" asp-action="Index"><input value="Geri Dön" class="btn btn-primary" /></a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</div>
<script src="~/argon/assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/argon/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/argon/assets/vendor/js-cookie/js.cookie.js"></script>
<script src="~/argon/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
<script src="~/argon/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
<!-- Argon JS -->
<script src="~/argon/assets/js/argon.js?v=1.2.0"></script>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
