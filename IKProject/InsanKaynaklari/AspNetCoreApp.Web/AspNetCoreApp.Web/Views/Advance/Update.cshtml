<body>
    <!-- Main content -->
    <div class="main-content" id="panel">

        <!-- Page content -->
        <div class="container-fluid mt-4 justify-content-center ">
            <div class="row">
                <div class="col-3">
                    <div></div>
                </div>
                <div class="col-6">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0"> Avans Güncelle </h3>
                                </div>
                                @*<div class="col-4 text-right">
                                        <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                                    </div>*@
                            </div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Update" asp-controller="Advance" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="@Model.AdvanceAmount" class="control-label"></label>
                                    <input asp-for="@Model.AdvanceAmount" class="form-control" />
                                    <span asp-validation-for="@Model.AdvanceAmount" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="@Model.Description">Açıklama</label>
                                        <textarea asp-for="@Model.Description" rows="4" class="form-control" placeholder="En az 10 karakterlik açıklama yazınız."></textarea>
                                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-control-label" asp-for="@Model.Currency">Para Birimi</label>
                                    <select class="form-control" asp-for="@Model.Currency" asp-items="@Html.GetEnumSelectList<Currency>()">
                                        <option>Lutfen Seciniz</option>
                                    </select>
                                    <span asp-validation-for="@Model.Currency" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <input type="submit" value="Kaydet" class="btn btn-success" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div></div>

                </div>
            </div>
            <!-- Footer -->
