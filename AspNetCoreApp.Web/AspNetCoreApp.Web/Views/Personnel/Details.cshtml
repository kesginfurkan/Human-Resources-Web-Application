@model CoreLayer.Entities.Personnel

@{
    ViewData["Title"] = "Kullanıcı Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@{ string gender = "";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Argon Dashboard - Free Dashboard for Bootstrap 4</title>
    <!-- Favicon -->
    <link rel="icon" href="~/argon/assets/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/argon/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/argon/assets/vendor/@@fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/argon/assets/css/argon.css?v=1.2.0" type="text/css">
    <title>IK Application</title>
</head>

<body>
    <div class="main-content" id="panel">
        <!-- Topnav -->
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-default border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Search form -->
                    <form class="navbar-search navbar-search-light form-inline mr-sm-3" id="navbar-search-main">
                        <div class="form-group mb-0">
                            <div class="input-group input-group-alternative input-group-merge">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input class="form-control" placeholder="Search" type="text">
                            </div>
                        </div>
                        <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </form>
                    <div class="d-flex justify-content-between align-self-auto">
                        <a href="/Personnel/Index" class="btn btn-m text-light mr-1 ml-4">Ana Sayfam</a>                         
                        <a href="/Personnel/Update" class="btn btn-m text-light mr-1 ml-4">Bilgilerimi Düzenle</a>
                    </div>
                    <ul class="navbar-nav align-items-center  ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="/Personnel/Index" role="button"  aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center mr-1">
                                    <p class=" center text-white">@Model.Name @Model.Surname</p>
                                    <span class="avatar avatar-sm rounded-circle">

                                        <img alt="Image placeholder" src="~/images/man_default.png">
                                    </span>
                                    <div class="media-body  ml-2  d-none d-lg-block">
                                        @*  <span class="mb-0 text-sm  font-weight-bold">@Model.Name @Model.Surname</span>*@
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Header -->
        <!-- Header -->
        <div class="header pb-0 d-flex align-items-center" style="min-height: 100px; background-image: url(~/argon/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
            <!-- Mask -->
            <span class="mask bg-gradient-default opacity-8"></span>
            <!-- Header container -->
            <div class="container-fluid align-items-center ">
                <div class="container">
                    <div class="col-lg-10 col-md-offset-1">
                        @*<h1 class="display-2 text-white">Merhaba @Model.Name @Model.Surname</h1>*@
                        <p class="text-white text-center mt-0 mb-1"></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header border-0">
                            <h3 class="mb-0">Personel Detay Sayfası</h3>

                           

                        </div>
                        <!-- Light table -->
                        <div class="table-responsive">

                            <div class="container">

                                <dl class="row" >
                                    <dt class="col-sm-2">
                                        Ad
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                    <dt class="col-sm-2">
                                        İkinci Ad
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MiddleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Soyad
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Surname)
                                    </dd>
                                    <dt class="col-sm-2">
                                        İkinci Soyad
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.SecondSurname)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Doğum Tarihi
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.BirthDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        TC Kimlik Numarası
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IdentityNumber)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Resim yolu
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ImagePath)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Doğum Yeri
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PlaceOfBirth)
                                    </dd>
                                    <dt class="col-sm-2">
                                        İşe Alınma Tarihi
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.HireDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        İşten Çıkarma Tarihi
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ReleaseDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        İş Ünvanı
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Job)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Mail Adresi
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Telefon Numarası
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PhoneNumber)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Adres
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Address)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Aylık Maaş
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Salary)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Cinsiyet
                                    </dt>
                                    <dd class="col-sm-10">

                                        @if (Model.Gender == CoreLayer.Enums.Gender.Male)
                                        {
                                            gender = "Erkek";
                                        }
                                        @if (Model.Gender == CoreLayer.Enums.Gender.Female)
                                        {
                                            gender = "Kadın";
                                        }
                                        

                                        @gender
                                    </dd>

                                    <dt class="col-sm-2">
                                        Departman
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Department.DepartmentName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Durum
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Status)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <a asp-action="Update" asp-route-id="@Model.Id">Bilgilerimi Düzenle</a> |
                                <a asp-action="Index">Ana Sayfama Geri Dön</a>
                            </div>

                        </div>
                        <!-- Card footer -->
                        <div class="card-footer py-4">
                            <nav aria-label="...">

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Dark table -->
            <!-- Footer -->

        </div>

    </div>




    <script src="~/argon/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/argon/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/argon/assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/argon/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/argon/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Argon JS -->
    <script src="~/argon/assets/js/argon.js?v=1.2.0"></script>
</body>


</html>
