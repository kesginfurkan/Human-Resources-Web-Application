
@model UserSignInViewModel

@{
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<body class="container bg-gray text-center">
    @*<div>
            <h3 class="fa-font-awesome-logo-full"> Core 5.0</h3>
        </div>*@

    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-3">
            <div class="m-2 p-2 text-white justify-content-center">
                <h3 class="text-light">Giriş Ekranı</h3>
            </div>
        </div>
        <div class="col-3">

        </div>

    </div>

   

    <div class="row">
        <div class="col-3">

        </div>

        <div class="col-6">
            <form role="form" class="m-2 p-2" asp-action="Index" asp-controller="Login" method="post">

                <div class="text-danger text-left mb-2" asp-validation-summary="ModelOnly">

                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.email" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.email" placeholder="Mail adresiniz" />
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.password" placeholder="Şifre" />
                </div>

                <div class="form-group">
                    <div class="checkbox"><label><input type="checkbox"><i></i> Kullanım Şartlarını okudum kabul ediyorum</label></div>
                </div>

                <a href="/RegisterUser/Index" class="btn btn-success btn-block mb-auto">Kayıt Ol</a>
                <p class="text-muted text-center"><small> Bir hesabınız var mı?</small></p>
                <button asp-action="Index" type="submit" class="btn btn-block btn-primary mb-3 text-white">Giriş Yap</button>

            </form>
            
        </div>

        <div class="col-3">

        </div>
    </div>

    
</body>




